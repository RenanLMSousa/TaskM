// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())

  email     String  @unique
  hash      String
  firstName String?

  tasks Tasks[]
}

model Tasks {
  id Int @id @default(autoincrement())

  title       String
  description String?

  usersId Int

  Users Users? @relation(fields: [usersId], references: [id])
}
